<div class="detail-features">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2>Chi tiết sản phẩm</h2>
                    <i class="fa fa-long-arrow-right" aria-hidden="true" style="margin-left: 30px;"></i>
                    <a style="text-transform: uppercase;" href="/{{product.company}}">{{product.company}}</a> 

                    <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
                            <a href="">{{product.name}}</a>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="right-image">
                            <div id="carouselIndicators" class="carousel slide" data-ride="carousel">
                                <ol class="carousel-indicators">
                                    <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
                                    <li data-target="#carouselIndicators" data-slide-to="1"></li>
                                    <li data-target="#carouselIndicators" data-slide-to="2"></li>
                                    <li data-target="#carouselIndicators" data-slide-to="3"></li>
                                    <li data-target="#carouselIndicators" data-slide-to="4"></li>
                                </ol>
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                    <img class="d-block w-100" src="{{product.image}}" alt="First slide">
                                    </div>
                                    <div class="carousel-item">
                                    <img class="d-block w-100" src="{{product.image2}}" alt="Second slide">
                                    </div>
                                    <div class="carousel-item">
                                    <img class="d-block w-100" src="{{product.image3}}" alt="Third slide">
                                    </div>
                                    <div class="carousel-item">
                                    <img class="d-block w-100" src="{{product.image4}}" alt="4th slide">
                                    </div>
                                    <div class="carousel-item">
                                    <img class="d-block w-100" src="{{product.image5}}" alt="5th slide">
                                    </div>
                                </div>
                                <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
                                    <span class=".bg-primary carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>

                            <h3>Giá:{{formatCurrency product.price}} VND</h3>
                            <h3>Giá khuyến mãi: {{formatCurrency (discount product.price product.discount)}} VND.</h3>
                            <a class="btn btn-outline-primary" style="margin-left: 60%; margin-top: 50px" href="/cart/{{product._id}}">Giỏ hàng</a>
                        </div>
                    </div>
                    <div class="col-md-6">
                    <div class="left-content">
                        <h4>Thông số sản phẩm</h4>

                        <table class="table-striped" style="width: 100%; ;text-align:center; font-size: 20px;">
                            <tr>
                                <td class="col-2">Name</td>
                                <td class="col-10">{{product.name}}</td>
                            </tr>
                            
                            <tr>
                                <td class="col-2">CPU</td>
                                <td class="col-10">{{product.CPU}}</td>
                            </tr>                            
                            <tr>
                                <td class="col-2">RAM</td>
                                <td class="col-10">{{product.RAM}}</td>
                            </tr>                            
                            <tr>
                                <td class="col-2">Storage</td>
                                <td class="col-10">{{product.storage}}</td>
                            </tr>                            
                            <tr>
                                <td class="col-2">Screen</td>
                                <td class="col-10">{{product.screen}}</td>
                            </tr>                            
                            <tr>
                                <td class="col-2">Graphic Card</td>
                                <td class="col-10">{{product.graphicCard}}</td>
                            </tr>                            
                            <tr>
                                <td class="col-2">Communication Port</td>
                                <td class="col-10">{{product.communicationPort}}</td>
                            </tr>                            
                            <tr>
                                <td class="col-2">WIFI + bluetooth</td>
                                <td class="col-10">{{product.WIFI}}, {{product.bluetooth}}</td>
                            </tr>                            
                            <tr>
                                <td class="col-2">Webcam</td>
                                <td class="col-10">{{product.webcam}}, </td>
                            </tr>                            
                            <tr>
                                <td class="col-2">OS</td>
                                <td class="col-10">{{product.OS}}</td>
                            </tr>
                            <tr>
                                <td class="col-2">Batterry</td>
                                <td class="col-10">{{product.batterry}}</td>
                            </tr>
                            <tr>
                                <td class="col-2">Weight</td>
                                <td class="col-10">{{product.weight}}</td>
                            </tr>
                            <tr>
                                <td class="col-2">Color</td>
                                <td class="col-10">{{product.color}}</td>
                            </tr>
                            <tr>
                                <td class="col-2">Witdh</td>
                                <td class="col-10">{{product.witdh}}</td>
                            </tr>

                        </table>
                    </div>
                </div>
                        <p>{{product.description}}</p>';

            </div>
        </div>
    </div>