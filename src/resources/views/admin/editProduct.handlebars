<form action="?_method=PUT" method="POST" class="w3-container w3-display-topmiddle w3-card-4 w3-light-grey w3-text-blue w3-margin" style="width: 60%">
    <h2 class="w3-center w3-serif" style="margin-top: 30px;">Sửa sản phẩm</h2>
    <a href="/go-to-admin-page/manageProducts" class="w3-display-topright w3-button w3-blue-gray w3-round w3-ripple w3-padding" style="margin-top: 30px;">Quay về trang chính</a>
    <div class="w3-row w3-section">
        <div class="w3-col w3-center " style="width: 30%; margin-top: 8px;"><label for="select">Hãng</label></div>
        <div class="w3-rest">
            <select name="company" id="select" required class="w3-select w3-text-blue">
            <option value="" disabled selected>Chọn công ty</option>
                <option value="{{product.company}}" selected="selected">{{product.company}}</option>
                {{#each companies}}
                    <option value="{{this.slug}}">{{this.name}}</option>
                {{/each}}
            </select>
            
        </div>
    </div>

    <div class="w3-row w3-section">
        <div class="w3-col w3-center " style="width: 30%; margin-top: 8px;">
            <label for="name">Tên sản phẩm</label></div>
        <div class="w3-rest">
            <input type="text" value="{{product.name}}" name="name" id="name" class="w3-input w3-text-blue">
        </div>
    </div>

    <div class="w3-row w3-section">
        <div class="w3-col w3-center " style="width: 30%; margin-top: 8px;"><label for="id">Id sản phẩm</label></div>
        <div class="w3-rest">
            <input type="text" value="{{product.id}}" name="id" id="id" class="w3-input w3-text-blue">
        </div>
    </div>

    <div class="w3-row w3-section">
        <div class="w3-col w3-center " style="width: 30%; margin-top: 8px;"><label for="description">Mô tả</label></div>
        <div class="w3-rest">
            <textarea type="textarea" style="overflow:auto; resize:none" rows="5" name="description" id="description" class="w3-input w3-text-blue">{{product.description}}</textarea>
        </div>
    </div>

    <div class="w3-row w3-section">
        <div class="w3-col w3-center " style="width: 30%; margin-top: 8px;"><label for="image">Hình sản phẩm</label></div>
        <div class="w3-rest">
            <input type="text" name="image" id="image" class="w3-input w3-text-blue" value="{{product.image}}"> 
            <div class="w3-card">
                <img src="{{product.image}}" class="w3-round w3-hover-opacity" style="width: 100%;" alt="">
            </div>
        </div>
    </div>

    <div class="w3-row w3-section">
        <div class="w3-col w3-center " style="width: 30%; margin-top: 8px;"><label for="image2">Hình sản phẩm</label></div>
        <div class="w3-rest">
            <input type="text" name="image2" id="image2" class="w3-input w3-text-blue" value="{{product.image2}}"> 
            <div class="w3-card">
                <img src="{{product.image2}}" class="w3-round w3-hover-opacity" style="width: 100%;" alt="">
            </div>
        </div>
    </div>

    <div class="w3-row w3-section">
        <div class="w3-col w3-center " style="width: 30%; margin-top: 8px;"><label for="image3">Hình sản phẩm</label></div>
        <div class="w3-rest">
            <input type="text" name="image3" id="image3" class="w3-input w3-text-blue" value="{{product.image3}}"> 
            <div class="w3-card">
                <img src="{{product.image3}}" class="w3-round w3-hover-opacity" style="width: 100%;" alt="">
            </div>
        </div>
    </div>

    <div class="w3-row w3-section">
        <div class="w3-col w3-center " style="width: 30%; margin-top: 8px;"><label for="image4">Hình sản phẩm</label></div>
        <div class="w3-rest">
            <input type="text" name="image4" id="image4" class="w3-input w3-text-blue" value="{{product.image4}}"> 
            <div class="w3-card">
                <img src="{{product.image4}}" class="w3-round w3-hover-opacity" style="width: 100%;" alt="">
            </div>
        </div>
    </div>

    <div class="w3-row w3-section">
        <div class="w3-col w3-center " style="width: 30%; margin-top: 8px;"><label for="image5">Hình sản phẩm</label></div>
        <div class="w3-rest">
            <input type="text" name="image5" id="image5" class="w3-input w3-text-blue" value="{{product.image5}}"> 
            <div class="w3-card">
                <img src="{{product.image5}}" class="w3-round w3-hover-opacity" style="width: 100%;" alt="">
            </div>
        </div>
    </div>

    <div class="w3-row w3-section">
        <div class="w3-col w3-center " style="width: 30%; margin-top: 8px;"><label for="price">Giá (VNĐ)</label></div>
        <div class="w3-rest">
            <input type="number" value="{{product.price}}" name="price" id="price" class="w3-input w3-text-blue">
        </div>
    </div>

    <div class="w3-row w3-section">
        <div class="w3-col w3-center " style="width: 30%; margin-top: 8px;"><label for="discount">Giảm giá (%)</label></div>
        <div class="w3-rest">
            <input type="number" value="{{product.discount}}" name="discount" id="discount" class="w3-input w3-text-blue" min="0" max="100">
        </div>
    </div>



    <div class="w3-row w3-section">
        <div class="w3-col w3-center " style="width: 30%; margin-top: 8px;"><label for="inventory">Tồn kho</label></div>
        <div class="w3-rest">
            <!-- <select name="inventory" id="inventory" class="w3-select w3-text-blue">
                <option disabled selected>Chọn trạng thái</option>
                <option value="1">Còn hàng</option>
                <option value="2">Hết hàng</option>
            </select> -->
            <input type="text" value="{{product.inventory}}" name="inventory" id="inventory" class="w3-input w3-text-blue">
        </div>
    </div>
    <div class="w3-row">
        <button type="submit" class="w3-half w3-button w3-round w3-block w3-margin w3-blue w3-ripple w3-padding">Sửa</button>
        <a href="/go-to-admin-page/manageProducts"><input value="Hủy bỏ" class="w3-third w3-right w3-button w3-round w3-block w3-margin w3-red w3-ripple w3-padding"></a>
    </div>
</form>